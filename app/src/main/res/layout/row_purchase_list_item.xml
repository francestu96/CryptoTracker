<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/button_ripple_effect"
    android:paddingEnd="4dp"
    android:paddingStart="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:clickable="true">

    <TextView
        android:id="@+id/purchaseCoinNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/currencyListCoinImageView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/purchaseQuantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        app:layout_constraintStart_toEndOf="@+id/purchaseCoinImageView"
        app:layout_constraintTop_toBottomOf="@+id/purchaseCoinNameTextView" />

    <ImageView
        android:id="@+id/purchaseCoinImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/CoinImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224" />

    <TextView
        android:id="@+id/purchasePriceUsdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        app:layout_constraintStart_toEndOf="@+id/purchaseCoinImageView"
        app:layout_constraintTop_toBottomOf="@+id/purchaseCoinImageView" />

    <TextView
        android:id="@+id/purchaseDateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        app:layout_constraintStart_toEndOf="@+id/purchaseCoinImageView"
        app:layout_constraintTop_toBottomOf="@+id/purchasedPriceTextView" />

    <TextView
        android:id="@+id/purchasedPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        app:layout_constraintStart_toEndOf="@+id/purchaseCoinImageView"
        app:layout_constraintTop_toBottomOf="@+id/purchasePriceUsdTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>